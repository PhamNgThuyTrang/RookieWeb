@using RookieShop.Shared.Constants

@if (User.Identity.IsAuthenticated)
{
<li class="list-inline-item">
    <a data-toggle="dropdown" data-hover="dropdown" data-delay="200" class="dropdown-toggle nav-link">
        <strong>
            Hello @User.Identity.Name !
        </strong>
        <b class="caret"></b>
    </a>
    <div class="dropdown-menu megamenu">
        <div class="nav-item dropdown-item">
            <a class="nav-link-custom" asp-action="ChangePassword" asp-controller="Account"><i class="fa fa-key"></i>  Change password</a>
        </div>
        <div class="nav-item dropdown-item">
            <a class="nav-link-custom" asp-action="Profile" asp-controller="Account"><i class="fa fa-user"></i>  Your Profile</a>
        </div>
        <div class="nav-item dropdown-item">
            <a class="nav-link-custom" asp-action="HistoryOrder" asp-controller="Client_Orders"><i class="fa fa-first-order"></i>  Order's History</a>
        </div>
        <div class="nav-item dropdown-item">
            <a class="nav-link-custom" asp-action="ClientNotification" asp-controller="Notification"><i class="fa fa-bell"></i>   Your Notification <b>@ViewData["Notifications"]</b></a>
        </div>
        @if (User.Identity.AuthenticationType == SecurityConstants.ADMINISTRATION_ROLE)
        {
<div class="nav-item dropdown-item">
    <a class="nav-link-custom" asp-controller="Admin" asp-action="Index">
        <i class="fa fa-briefcase"></i>
        Admin DashBoard
    </a>
</div>
        }
        <div class="nav-item dropdown-item">
            <a class="nav-link-custom" asp-action="SignOut" asp-controller="Account"><i class="fa fa-power-off"></i> Sign out</a>
        </div>
    </div>
</li> 
}
else
{
<li class="list-inline-item"><a asp-action="TrackOrder" asp-controller="Account">Track order</a></li>
<li class="list-inline-item"><a asp-action="SignIn" asp-controller="Account">Sign in</a></li>
<li class="list-inline-item"><a asp-action="TrackOrder" asp-controller="Account">Sign up</a></li>
}