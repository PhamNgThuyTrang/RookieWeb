<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Rookie Shoes Store">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!--Title Page-->
    <title>@ViewData["Title"]</title>
    @*<link rel="shortcut icon" href="~/Images/HSlogo.png">*@
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="~/distribution/vendor/bootstrap/css/bootstrap.css">
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="~/distribution/vendor/font-awesome/css/font-awesome.min.css">
    <!-- Google fonts - Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700">
    <!-- owl carousel-->
    <link rel="stylesheet" href="~/distribution/vendor/owl.carousel/assets/owl.carousel.css">
    <link rel="stylesheet" href="~/distribution/vendor/owl.carousel/assets/owl.theme.default.css">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="~/distribution/css/style.default.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="~/distribution/css/custom.css">
    <!-- Favicon-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-6VBH72Y4G4"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'G-6VBH72Y4G4');
    </script>
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
    <!-- JavaScript files-->
    <script src="~/distribution/vendor/jquery/jquery.min.js"></script>
    <script src="~/distribution/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/distribution/vendor/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/distribution/vendor/owl.carousel/owl.carousel.js"></script>
    <script src="~/distribution/vendor/owl.carousel2.thumbs/owl.carousel2.thumbs.js"></script>
    <script src="~/distribution/js/front.js"></script>
    @RenderSection("css", required: false)
    @RenderSection("SocialSeo", required: false)
    @RenderSection("ajax", required: false)


</head>
<body>
    <header class="header mb-5">
        <!--
        *** TOPBAR ***
        _________________________________________________________
        -->
        <div id="top">
            <div class="container">
                <div class="d-flex flex-row-reverse">
                    <ul class="menu list-inline mb-0">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </div>
        <!-- *** TOP BAR END ***-->
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a asp-area="Home" class="navbar-brand home">
                    <img src="~/Images/Untitled.png" alt="HS logo" class="d-none d-md-inline-block" style="width: 255px">
                    <span class="sr-only">Rookie Shop</span>
                </a>
                <div class="navbar-buttons">
                    <button type="button" data-toggle="collapse" data-target="#navigation" class="btn btn-outline-secondary navbar-toggler"><span class="sr-only">Toggle navigation</span><i class="fa fa-align-justify"></i></button>
                    <button type="button" data-toggle="collapse" data-target="#search" class="btn btn-outline-secondary navbar-toggler"><span class="sr-only">Toggle search</span><i class="fa fa-search"></i></button>
                    <a asp-controller="Client_ProductCarts" asp-action="cart" class="btn btn-outline-secondary navbar-toggler">
                    <i class="fa fa-shopping-cart"></i></a>
                </div>

                <div id="navigation" class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                    </ul>
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item"><a asp-area="Home" class="nav-link active">Home</a></li>
                        @await Component.InvokeAsync("Category")
                    </ul>
                    <div class="navbar-buttons d-flex justify-content-end">
                        <!-- /.nav-collapse-->
                        <div id="search-not-mobile" class="navbar-collapse collapse"></div>
                        <a data-toggle="collapse" href="#search" class="btn navbar-btn btn-primary d-none d-lg-inline-block">
                        <span class="sr-only">Toggle search</span>
                        <i class="fa fa-search"></i></a>
                        <partial name="_CartPartial" />
                    </div>
                </div>
            </div>
        </nav>
        <div id="search" class="collapse">
            <div class="container">
                <form asp-controller="Products" asp-action="ProductByCategory" method="get" class="ml-auto">
                    <div class="input-group">
                        <input name="Search" type="text" placeholder="Search" class="form-control">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </header>
    <div id="all">
        <div id="content">
            @RenderBody()
        </div>
    </div>
    <partial name="_Footer" />
    @RenderSection("Scripts", required: false)
</body>
</html>